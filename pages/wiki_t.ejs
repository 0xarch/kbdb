<!DOCTYPE html>
<head>
    <%- include("widgets/head.ejs") %>
    <title><%= wiki.title -%> | Wiki - <%= site_conf.site.short -%></title>
</head>
<body>
    <hidden id="_wiki-url"><%- wiki.url -%></hidden>
    <%- include("widgets/m-header.ejs") %>
    <main>
        <article id="_wiki-article">
        </article>
        <aside>
            <div class="wiki-info-div">
                <p class="wiki-edit-time-p">编辑时间： <%= wiki.edit_time -%></p>
                <p class="wiki-editor-p">编辑者： <%= wiki.author -%></p>
            </div>
            <div class="wiki-content">
                <%# Will be filled with content by javascript below #%>
            </div>
        </aside>
        <script comment="fetching wiki">
            let url=document.getElementById("_wiki-url").textContent;
            fetch(url).then(data=>data.text().then(data=>document.getElementById("_wiki-article").innerHTML=data))
        </script>
    </main>
</body>